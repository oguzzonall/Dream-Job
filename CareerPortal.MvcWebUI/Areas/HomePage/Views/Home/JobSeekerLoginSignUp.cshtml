@model JobSeekerLoginSignUpViewModel
@{
    ViewData["Title"] = "JobSeekerLogin";
    Layout = "~/Areas/HomePage/Views/Shared/_Layout.cshtml";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('/jobboard/images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Üye Ol / Giriş Yap</h1>
                <div class="custom-breadcrumbs">
                    <a asp-action="Index" asp-controller="Home" asp-area="HomePage">Anasayfa</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>İş Arayan Giriş - Üye Ol</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5">
                <h2 class="mb-4">Sign Up To JobBoard</h2>
                <form asp-controller="Home" asp-action="JobSeekerSignUp" asp-area="HomePage" method="post" class="p-4 border rounded">

                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" asp-for="JobSeekerSignUpModel.Email">Email</label>
                            <input asp-for="JobSeekerSignUpModel.Email" class="form-control" placeholder="Email address">
                            <span asp-validation-for="JobSeekerSignUpModel.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" asp-for="JobSeekerSignUpModel.Password">Password</label>
                            <input type="password" asp-for="JobSeekerSignUpModel.Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="JobSeekerSignUpModel.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" asp-for="JobSeekerSignUpModel.ConfirmPassword">Re-Type Password</label>
                            <input type="password" asp-for="JobSeekerSignUpModel.ConfirmPassword" class="form-control" placeholder="Re-type Password">
                            <span asp-validation-for="JobSeekerSignUpModel.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Sign Up" class="btn px-4 btn-primary text-white">
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-lg-6">
                <h2 class="mb-4">Log In To JobBoard</h2>
                <form asp-controller="Home" asp-action="JobSeekerSignUp" asp-area="HomePage" method="post" class="p-4 border rounded">

                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" asp-for="JobSeekerLoginModel.Email">Email</label>
                            <input asp-for="JobSeekerLoginModel.Email" class="form-control" placeholder="Email address">
                            <span asp-validation-for="JobSeekerLoginModel.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" asp-for="JobSeekerLoginModel.Password">Password</label>
                            <input type="password" asp-for="JobSeekerLoginModel.Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="JobSeekerLoginModel.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Log In" class="btn px-4 btn-primary text-white">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

